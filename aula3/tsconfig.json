{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
      "@ui/*": ["ui/*"],
      "@utils/*": ["utils/*"]
    },
    "outDir": "./dist",
    "strict": true
  },
  "include": ["src"]
}
